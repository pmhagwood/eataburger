<header>
  <img src="/assets/images/burgers.png" width="300" alt="burger logo" >
</header>
<section class="clearfix">
  <div class="alignblock">
  <div class="leftblock">
<h2>Burgers Ready</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="rightblock">
<h2>Burgers Eaten</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</section>
<div class="bottomblock">
<h2>Order A Burger</h2>
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="ca">Cat Name:</label> --}}
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

