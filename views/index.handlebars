<header>
  <img src="/assets/images/burgers.png" width="300" alt="burger logo" >
</header>
<section class="clearfix">
  <div class="alignblock">
  <div class="leftblock">
<h2>Burgers Ready</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="rightblock">
<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</section>
<div class="bottomblock">
<h2>Order A Burger</h2>
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="ca">Cat Name:</label> --}}
    <input type="text" id="add" name="name">
  </div>

  <button type="submit" id="addburger">Add Burger</button>
  <p>Enter A Burger You Want to Eat, Click "ADD BURGER" Button</p>
</form>
</div>

